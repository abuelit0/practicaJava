	private void _ejemplo1(){
		int [] grades = null;
		
		try{
			for(int i = 0; i < grades.length; i++){}
				
		}catch (NullPointerException e) {
			System.out.println("Grades maybe empy!");
		}catch (RuntimeException e){
			System.out.println("Problem while executing");
