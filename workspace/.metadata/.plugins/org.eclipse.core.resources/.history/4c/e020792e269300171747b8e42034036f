package com.beca.arreglos;

/**
 * 
 * @author Luis Guillermo
 *
 *	Ejemplos para ver arreglos
 */
public class Main {

	public static void main(String args[]){
		_ejemplo1();
	}
	
	/**
	 * Definicion de un arreglo
	 */
	private static void _ejemplo1(){
		int []scores;
		
		scores = new int[3];
		
		scores[0] = 10;
		//scores[1] = 7;
		scores[2] = 9;
		
		System.out.println(scores);
	}
	
	/**
	 * Recorrer un arreglo
	 */
	private void _ejemplo2(){
		int []scores;	
		
		scores = new int[3];
		
		scores[0] = 10;
		//scores[1] = 7;
		scores[2] = 9;
		
		System.out.println(scores);
		
	}
	
	private static void _imprimeArreglo(int []n){
		for (int i : n) {
			System.out.println(i);
		}
	}
}
