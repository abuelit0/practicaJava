package com.beca.ejercicio11;

public class AppMainEjercicio11 {
	
	public static void main(String[] args) {
		
		metodo(1);
		metodo(2);
	}
	
	public static void metodo(int entrada){
		
		try{
			
			System.out.println("Comienza el try");
			
			if(entrada != 1)
				throw new MiExcepcion();
			
			System.out.println("Termina el try");
			
		}catch (MiExcepcion e) {
			System.out.println("Comienza el catch");
			System.out.println("Termina el catch");
		}finally{
			System.out.println("Se ejecuta el finally");
		}
	}

}

class MiExcepcion extends Exception{
	
	public String toString(){
		return "Saludos desde mi excepcion";
	}
	
}